@model ImageUpload.Models.FileUpload


@if (ViewBag.ResultMessage != null)
{
    <div class="alert alert-success">@ViewBag.ResultMessage</div>
}
<form method="post" enctype="multipart/form-data" asp-action="FileUpload" asp-controller="Image">
    <div class="form-group">
        <label asp-for="FileName"></label>
        <input asp-for="FileName" class="form-control" />
        <span asp-validation-for="FileName" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="MyFiles"></label>
        <input asp-for="MyFiles" type="file" multiple class="form-control" />
        <span asp-validation-for="MyFiles" class="text-danger"></span>
    </div>
    <br />
    <button type="submit" class="btn btn-primary">Submit</button>
</form>
